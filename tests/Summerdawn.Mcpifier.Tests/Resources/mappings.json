{
  "Mcpifier": {
    "Tools": [
      {
        "mcp": {
          "name": "user_get_current_user",
          "description": "GET /me",
          "inputSchema": {
            "type": "object"
          }
        },
        "rest": {
          "method": "GET",
          "path": "/me"
        }
      },
      {
        "mcp": {
          "name": "user_register_user",
          "description": "Registers the current user.",
          "inputSchema": {
            "type": "object"
          }
        },
        "rest": {
          "method": "POST",
          "path": "/me/register"
        }
      },
      {
        "mcp": {
          "name": "user_link_user",
          "description": "Links the current identity to an existing user.",
          "inputSchema": {
            "type": "object"
          }
        },
        "rest": {
          "method": "POST",
          "path": "/me/link"
        }
      },
      {
        "mcp": {
          "name": "analysis_create_analysis",
          "description": "Analyze measurements within a date range",
          "inputSchema": {
            "type": "object",
            "properties": {
              "from": {
                "type": "string",
                "format": "date"
              },
              "to": {
                "type": "string",
                "format": "date"
              }
            }
          },
          "outputSchema": {
            "type": "object",
            "properties": {
              "analyses": {
                "type": "object",
                "additionalProperties": {
                  "type": "object",
                  "properties": {
                    "analysisText": {
                      "type": "string"
                    },
                    "recommendationText": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false,
            "description": "DTO for analysis response"
          }
        },
        "rest": {
          "method": "POST",
          "path": "/vibe/analysis",
          "query": "from={from}&to={to}"
        }
      },
      {
        "mcp": {
          "name": "measurement_create_measurement",
          "description": "Create a new measurement",
          "inputSchema": {
            "type": "object",
            "properties": {
              "requestBody": {
                "required": [
                  "timestampLocal",
                  "metrics"
                ],
                "type": "object",
                "properties": {
                  "timestampLocal": {
                    "minLength": 1,
                    "type": "string",
                    "description": "Local timestamp when the measurement applies (DateTimeOffset).",
                    "format": "date-time"
                  },
                  "metrics": {
                    "minProperties": 1,
                    "type": "object",
                    "additionalProperties": {
                      "type": "integer",
                      "format": "int32"
                    },
                    "description": "Dictionary of metric names to values\nFor v0.1, should contain \"energy\" with value 1-5"
                  }
                },
                "additionalProperties": false,
                "description": "DTO for creating a new measurement"
              }
            },
            "required": [
              "requestBody"
            ]
          },
          "outputSchema": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier for the measurement"
              },
              "timestampLocal": {
                "type": "string",
                "description": "Local timestamp when the measurement applies (user local time with offset)",
                "format": "date-time"
              },
              "createdUtc": {
                "type": "string",
                "description": "Timestamp when the measurement was created/stored (UTC)",
                "format": "date-time"
              },
              "metrics": {
                "type": "object",
                "additionalProperties": {
                  "type": "integer",
                  "format": "int32"
                },
                "description": "Dictionary of metric names to values"
              }
            },
            "additionalProperties": false,
            "description": "DTO for returning measurement data"
          }
        },
        "rest": {
          "method": "POST",
          "path": "/vibe/measurements",
          "body": "{requestBody}"
        }
      },
      {
        "mcp": {
          "name": "measurement_get_measurements",
          "description": "Get measurements for the current user within a date range",
          "inputSchema": {
            "type": "object",
            "properties": {
              "from": {
                "type": "string",
                "description": "Start date (local)",
                "format": "date-time"
              },
              "to": {
                "type": "string",
                "description": "End date (local)",
                "format": "date-time"
              }
            }
          },
          "outputSchema": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Unique identifier for the measurement"
                },
                "timestampLocal": {
                  "type": "string",
                  "description": "Local timestamp when the measurement applies (user local time with offset)",
                  "format": "date-time"
                },
                "createdUtc": {
                  "type": "string",
                  "description": "Timestamp when the measurement was created/stored (UTC)",
                  "format": "date-time"
                },
                "metrics": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "integer",
                    "format": "int32"
                  },
                  "description": "Dictionary of metric names to values"
                }
              },
              "additionalProperties": false,
              "description": "DTO for returning measurement data"
            }
          }
        },
        "rest": {
          "method": "GET",
          "path": "/vibe/measurements",
          "query": "from={from}&to={to}"
        }
      },
      {
        "mcp": {
          "name": "measurement_get_recent",
          "description": "Get recent measurements for the current user",
          "inputSchema": {
            "type": "object",
            "properties": {
              "count": {
                "type": "integer",
                "description": "Number of measurements to retrieve (default: 5)",
                "format": "int32",
                "default": 5
              }
            }
          },
          "outputSchema": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Unique identifier for the measurement"
                },
                "timestampLocal": {
                  "type": "string",
                  "description": "Local timestamp when the measurement applies (user local time with offset)",
                  "format": "date-time"
                },
                "createdUtc": {
                  "type": "string",
                  "description": "Timestamp when the measurement was created/stored (UTC)",
                  "format": "date-time"
                },
                "metrics": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "integer",
                    "format": "int32"
                  },
                  "description": "Dictionary of metric names to values"
                }
              },
              "additionalProperties": false,
              "description": "DTO for returning measurement data"
            }
          }
        },
        "rest": {
          "method": "GET",
          "path": "/vibe/measurements/recent",
          "query": "count={count}"
        }
      }
    ]
  }
}